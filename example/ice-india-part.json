{
    "source": {
        "ice-india-spoken": [ "corpus/ice/ICE India/Corpus/S2b-04*.txt" ],
        "ice-india-written": [ "corpus/ice/ICE India/Corpus/W2b-03*.txt" ]
    },
    "output-dir": "output/ice-india",
    "encoding": "1252",
    "context": 100,
    "search": {
        "ness": ".*(n[e']ss.*|snss)",
        "ity": ".*([ie]t(y|ie).*|vty)"
    },
    "word": "\\w+([-']\\w+)*",
    "tag": "<[^<> ]+>",
    "delete": [
        ["<.*#.*>"],
        ["<O>", "</O>"],
        ["<X>", "</X>"],
        ["<&>", "</&>"]
    ],
    "sample": "<\\$.*>",
    "search-ignore-case": true,
    "word-ignore-case": false,
    "tag-ignore-case": false
}
